export interface Props {
	src: string
	alt: string
	caption?: string
	invertable?: boolean
}

const { src, alt, caption, invertable } = Astro.props
---
<figure class:list={[ { invertable: invertable } ]}>
	<img src={src} alt={alt}/>
	<figcaption>{caption || alt}</figcaption>
</figure>

<style>
	figure {
		display: flex;
		flex-direction: column;
		margin: 1em 0 3em;
		width: 100%;
	}

	img {
		align-self: center;
		max-width: 100%;
	}

	figcaption {
		margin-top: 12px;
		padding-top: 4px;
		border-top: 1px #ccc solid;
		font-size: .9em;
		color: #444;
		text-align: center;
	}

	@media (prefers-color-scheme: dark) {
		figcaption {
			border-color: #444;
			color: #bbb;
		}

		.invertable img {
			filter: invert(1);
		}
	}
</style>
