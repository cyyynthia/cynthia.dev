import GlobalLayout from '../layouts/GlobalLayout.astro'
import PageHeader from '../components/PageHeader.astro'
import Section from '../components/Section.astro'
import Donator from '../components/Donator.astro'

import donatorsList from '../data/donators.json'

const donators = donatorsList.others
const subscribers = [
	...donatorsList.diamond,
	...donatorsList.emerald,
	...donatorsList.gold,
	...donatorsList.silver,
	...donatorsList.bronze,
]
---
<GlobalLayout title="donators - cynthia's website">
	<PageHeader>
		Donators hall of fame
	</PageHeader>
	<main>
		<Section class="warning">
			This page is very outdated and doesn't mention many new donators. I sincerely apologise for that and the
			delay for acknowledging this! I'll improve it and make it automatically update, some day...
		</Section>
		<Section>
			Massive thanks to everyone who donated to me. It means a lot, no matter the amount!
		</Section>
		<Section title="Subscribers">
			<div class="donators">
				{subscribers.map(({ name, pic, date }) =>
					<Donator name={name} pic={pic} date={date} />)}
			</div>
		</Section>
		<Section title="One-time & past subscribers">
			<div class="donators">
				{donators.map(({ name, pic, date }) =>
					<Donator name={name} pic={pic} date={date} />)}
			</div>
		</Section>
	</main>
</GlobalLayout>

<style>
	.donators {
		margin-top: 16px;
		display: flex;
		flex-wrap: wrap;
		gap: 16px;
	}

	.warning {
		padding: 1rem;
		border: 1px #ffa500 solid;
		background-color: #ffa50020;
	}
</style>
